<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/imageView_background_zuixin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/textView_position_zuixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_margin="4dp"
        android:drawableLeft="@mipmap/icon_location_white"/>

    <ImageView
        android:id="@+id/imageView_youshang_zuixin"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp" />
    <TextView
        android:id="@+id/textView_username_zuixin"
        android:layout_width="60dp"
        android:singleLine="true"
        android:textSize="15sp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imageView_star_zuixin"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:layout_margin="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>